{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Reservations</h1>

    {% if reposBS is defined %}
    {% for repo in reposBS %}
    <hr>
    <ul>
        <li>Nom : -</li>   
        <li>Voiture : {{ repo.carId }} </li>
        <li>Date de début : {{ repo.begin }} </li>
        <li>Date de fin : {{ repo.end }} </li>  
        <li>Prix : - </li> 
    </ul>
    {% endfor %}
    {% endif %}

    {% if reposJY is defined %}
    {% for repo in reposJY %}
    <hr>
    <ul>   
        <li>Nom : {{ repo.customerName }}</li> 
        <li>Voiture : {{ repo.car.name }} </li>
        <li>Date de début : {{ repo.departureDate }} </li>
        <li>Date de fin : {{ repo.arrivalDate }} </li>  
        <li>Prix : {{ repo.price }} </li>
    </ul>
    {% endfor %}
    {% endif %}
                 
</div>
{% endblock %}