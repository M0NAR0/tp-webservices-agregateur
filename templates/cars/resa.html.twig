{% extends 'base.html.twig' %}

{% block title %}Hello CarsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Repository réservations</h1>
     <ul>
        {% for repo in reposBS %}    
            <li>Nom : Personne d'attribué</li>   
            <li>Voiture : {{ repo.carId }} </li>
            <li>Date de début : {{ repo.begin }} </li>
            <li>Date de fin : {{ repo.end }} </li>  
            <li>Prix : On aime la gratuité </li>      
            <h1> ---------------------------------------------------------------</h1>          
        {% endfor %}
        {% for repo in reposJY %}     
            <li>Nom : {{ repo.customerName }}</li> 
            <li>Voiture : {{ repo.car.name }} </li>
            <li>Date de début : {{ repo.departureDate }} </li>
            <li>Date de fin : {{ repo.arrivalDate }} </li>  
            <li>Prix : {{ repo.price }} </li>    
            <h1> ---------------------------------------------------------------</h1>          
        {% endfor %}
    </ul>
                 
</div>
{% endblock %}