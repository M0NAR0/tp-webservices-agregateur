{% extends 'base.html.twig' %}

{% block title %}Hello CarsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Repository Cars</h1>

    <ul>
        {% for repo in reposBS %}
        <li>Nom : {{ repo.name }} </li>
        <li>Description : {{ repo.description }} </li>
        <li>Marque : {{ repo.brand }} </li>
        <li>Immatriculation : {{ repo.immat }} </li>
        <li>Prix : {{ repo.dailyPrice }} </li>
        <h1> ---------------------------------------------------------------</h1>
        {% endfor %}    
        {% for repo in reposJY %}
        <li>Nom : {{ repo.name }} </li>
        <li>Description : Pas de description </li>
        <li>Marque : {{ repo.marque }} </li>
        <li>Immatriculation : Pas de plaque d'immatriculation </li>
        <li>Prix : C'est gratuit askip</li>
        <h1> ---------------------------------------------------------------</h1>
        {% endfor %}
    </ul>
</div>
{% endblock %}