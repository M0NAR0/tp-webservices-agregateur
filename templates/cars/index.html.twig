{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Cars</h1>

    {% if reposBS is defined %}
    {% for repo in reposBS %}
    <hr>
    <ul>
        <li>Nom : {{ repo.name }} </li>
        <li>Description : {{ repo.description }} </li>
        <li>Marque : {{ repo.brand }} </li>
        <li>Immatriculation : {{ repo.immat }} </li>
        <li>Prix : {{ repo.dailyPrice }} </li>
    </ul>
    {% endfor %}
    {% endif %}

    {% if reposJY is defined %}
    {% for repo in reposJY %}
    <hr>
    <ul>
        <li>Nom : {{ repo.name }} </li>
        <li>Description : - </li>
        <li>Marque : {{ repo.marque }} </li>
        <li>Immatriculation : - </li>
        <li>Prix : -</li>
    </ul>
    {% endfor %}
    {% endif %}
    
</div>
{% endblock %}